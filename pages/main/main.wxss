.main {
  padding-bottom: 2.5rem;
}
.new-song .title {
  padding-left: 1rem;
  font-size: .9rem;
}

.new-song .album-list {
  margin: .5rem 0;
}

.new-song .album-list .album-item {
  float: left;
  width: 44vw;
  margin-left: 4vw;
  margin-bottom: 4vw;
}

.new-song .album-list .album-item image {
  width: 100%;
  height: 44vw;
}

.new-song .album-list .album-item .name {
  display: block;
  font-size: .85rem;
}

.new-song .album-list .album-item .singer {
  display: block;
  font-size: .75rem;
  color: #aaa;
}

.new-song .toggle {
  align-items: center;
  justify-content: center;
}

.new-song .toggle text,
.new-song .toggle .icon {
  flex: 1;
}

.new-song .toggle text {
  text-align: right;
}

.new-song .toggle .icon {
  display: flex;
  align-items: center;
}

.new-song .toggle .icon image {
  width: 1rem;
  height: 1rem;
  margin-left: .3rem;
}

.feature-list {
  margin-top: .6rem;
  padding: 0 .8rem;
}

.feature-list .feature-item {
  align-items: center;
  border-bottom: 1px solid #efefef;
  margin-bottom: .5rem;
  padding-bottom: .3rem;
}

.feature-list .feature-item .feature-logo {
  width: 2.5rem;
  height: 2.5rem;
  border-radius: .3rem;
}

.feature-list .feature-item .title {
  flex: 1;
  padding-left: .3rem;
}

.current-play {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 94vw;
  background: #efefef;
  align-items: center;
  justify-content: center;
  padding: 0 3vw;
  height: 2.8rem;
}

.current-play .play-img {
  width: 1.8rem;
  height: 1.8rem;
  border-radius: .3rem;
}

.current-play .name {
  flex: 1;
  padding-left: .4rem;
  font-size: .8rem;
}

.current-play .play-icon {
  width: 2rem;
  display: flex;
  height: 2.8rem;
  align-items: center;
  justify-content: center;
}

.current-play .play-icon image {
  width: 1rem;
  height: 1rem;
}

.clearfix {
  clear: both;
}

.frl {
  display: flex;
}
